{
  "name": "server",
  "version": "0.0.1",
  "description": "App server for the chatbot application.",
  "author": "Abdul kalam",
  "private": true,
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "build": "nest build",
    "dev": "nest start -b swc",
    "dev:watch": "nest start --watch -b swc",
    "debug:watch": "nest start --debug --watch",
    "prod": "node dist/main",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "test:ui": "vitest --ui",
    "test:e2e": "vitest run --config ./vitest.e2e.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@repo/shared": "workspace:*",
    "add": "^2.0.6",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "pg": "^8.16.3",
    "pnpm": "^10.17.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "drizzle-kit": "^0.31.5",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "unplugin-swc": "^1.5.1",
    "vitest": "^2.1.8"
  }
}
